#!/usr/bin/env node

/**
 * Command line interface of the-script-build.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const theScriptBuild = require('../lib')

program
  .version(pkg['version'])
  .usage('[options] <dirname> ')
  .description(pkg[ 'description' ])
  .option('-w, --watch', 'Run file watch')
program.parse(process.argv)

// Run main command
theScriptBuild.apply(theScriptBuild, program.args.concat({
  watch: program['watch']})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
