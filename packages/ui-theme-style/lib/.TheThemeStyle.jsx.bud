'use strict'

const components = require('@the-/ui/components.json')

module.exports = {
  data: {
    pkg: require('../package.json'),
    styleComponents: Object.keys(components).reduce(
      (styleComponents, pkgName) => [
        ...styleComponents,
        ...components[pkgName]
          .filter(
            (componentName) =>
              /Style$/.test(componentName) && componentName !== 'TheStyle',
          )
          .map((componentName) => ({
            componentName,
            pkgName,
          })),
      ],
      [],
    ),
  },
  force: true,
  mode: '444',
}

if (!module.parent) {
  require('coz').render(__filename)
}
