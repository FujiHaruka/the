#!/usr/bin/env node

/**
 * Command line interface of the-bin.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const theBin = require('../lib/run')

program
  .version(pkg['version'])
  .usage('[options] ')
  .description(pkg[ 'description' ])
program.parse(process.argv)

// Run main command
theBin.apply(theBin, program.args.concat({
})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
