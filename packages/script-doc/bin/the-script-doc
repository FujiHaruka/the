#!/usr/bin/env node

/**
 * Command line interface of the-script-doc.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const theScriptDoc = require('../lib')

program
  .version(pkg[ 'version' ])
  .usage('[options] <dirname> ')
  .description(pkg[ 'description' ])
program.parse(process.argv)

// Run main command
theScriptDoc.apply(theScriptDoc, program.args.concat({
})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
