#!/usr/bin/env node

/**
 * Command line interface of the-run.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const theRun = require('../lib')

program
  .version(pkg['version'])
  .usage('[options] <filename> ')
  .description(pkg[ 'description' ])
  .option('-i, --inspect <inspect>', 'Inspect port number')
program.parse(process.argv)

// Run main command
theRun.apply(theRun, program.args.concat({
  inspect: program.inspect})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
